<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".DetailActivity">

    <TextView
            android:id="@+id/productName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/productPrice"
            android:layout_toStartOf="@+id/productPrice"
            android:text="Item Name"
            android:textSize="24sp"
            tools:ignore="HardcodedText" />

    <TextView
            android:id="@+id/productPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/productName"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="$9"
            android:textAllCaps="true"
            android:textSize="24sp"
            tools:ignore="HardcodedText" />

    <ImageView
            android:id="@+id/imageView_2"
            android:layout_width="257dp"
            android:layout_height="143dp"
            android:layout_below="@+id/productName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-44dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/image1" />

    <TextView
            android:id="@+id/productDetails"
            android:layout_width="360dp"
            android:layout_height="115dp"
            android:layout_alignBottom="@+id/productTransmission"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="133dp"
            android:layout_marginEnd="3dp"
            android:layout_marginRight="3dp"
            android:text="Longer description"
            tools:ignore="HardcodedText" />


    <TextView
            android:id="@+id/engineSizeWords"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/imageView_2"
            android:layout_alignLeft="@+id/imageView_2"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="293dp"
            android:layout_marginLeft="173dp"
            android:layout_marginBottom="255dp"
            android:ems="10"
            android:text="Engine Size" />


    <TextView
            android:id="@+id/productTopSpeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="57dp"
            android:layout_marginLeft="57dp"
            android:layout_marginBottom="228dp"
            android:text="Number" />





    <TextView
            android:id="@+id/zeroToSixtyWords"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="64dp"
            android:layout_marginLeft="64dp"
            android:layout_marginBottom="200dp"
            android:ems="10"
            android:text="0 to 60" />

    <TextView
            android:id="@+id/productZeroSixty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="60dp"
            android:layout_marginLeft="60dp"
            android:layout_marginBottom="173dp"
            android:text="Number" />





    <TextView
            android:id="@+id/productEngixeSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="80dp"
            android:layout_marginRight="80dp"
            android:layout_marginBottom="228dp"
            android:text="Number" />


    <TextView
            android:id="@+id/topSpeedWords"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="54dp"
            android:layout_marginLeft="54dp"
            android:layout_marginBottom="255dp"
            android:ems="10"
            android:text="Top Speed" />


    <TextView
            android:id="@+id/transmissionWords"
            android:layout_width="93dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="200dp"
            android:ems="10"
            android:text="transmission" />

    <TextView
            android:id="@+id/productTransmission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="54dp"
            android:layout_marginRight="54dp"
            android:layout_marginBottom="173dp"
            android:text="Number" />

    <Button
            android:id="@+id/website_button_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/productDetails"
            android:layout_centerHorizontal="true"
            android:background="@layout/rounded_button_settings"
            android:textColor="@android:color/white"
            android:onClick="miamiAutoUrl"
            android:text="Website" />

</RelativeLayout>